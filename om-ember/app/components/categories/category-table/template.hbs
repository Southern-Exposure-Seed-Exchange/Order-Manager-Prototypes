<thead>
  <tr>
    <th>Name</th>
    {{#if showParent}}<th>Parent Category</th>{{/if}}
    <th>Categories</th>
    <th>Products</th>
  </tr>
</thead>
{{#vertical-collection
  tagName='tbody'
  content=categories
  containerSelector='body'
  defaultHeight=27
  alwaysUseDefaultHeight=true
  bufferSize=0.5
  key="id"
  as |category|}}
    {{categories/category-row category=category showParent=showParent tagName=""}}
{{/vertical-collection}}
